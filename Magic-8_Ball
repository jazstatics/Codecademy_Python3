#The goal was to create a magic-8 ball that answered one question and experiments with conditional statments.

import random

name = "Jaz"
question = "Will I own many dogs?"
answer = "Error."

print(name + " asks: " + question)

random_number = random.randint(1, 9)
#print(random_number)
print('''
Magic 8-Ball's answer:''')

if random_number == 1:
  print("Yes - definitely.")
elif random_number == 2:
  print("It is decidedly so.")
elif random_number == 3:
  print("Without a doubt.")
elif random_number == 4:
  print("Reply hazy, try again.")
elif random_number == 5:
  print("Ask again later.")
elif random_number == 6:
  print("Better not tell you now.")
elif random_number == 7:
  print("Why even ask, of course.")
elif random_number == 8:
  print("Outlook not so bad.")
elif random_number == 9:
  print("Very doubtful.")
else:
  print(answer)
